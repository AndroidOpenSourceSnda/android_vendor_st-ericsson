#/usr/bin/env
rscf=/etc/resolv.conf

case "${connection_status}" in
    idle|connecting|disconnecting)       
         echo "connection status ${connection_status}"
	 ;;
    connected)                
         echo "CONNECTED"
	 #/usr/bin/env
	 # echo "# Generated by psccd:"
	 ip addr add ${own_ip_address} dev ${netdev_name}
	 ip link set dev ${netdev_name} up
   ip route add ${own_ip_address}/32 dev ${netdev_name}
	 for nameserver in ${dns_addresses}; do
	     echo "echo nameserver $nameserver >> ${rscf}"
	     echo ip route add $nameserver dev ${netdev_name}
	 done
	 ;;
esac
